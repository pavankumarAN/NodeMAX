extends layouts/main-layout.pug

block styles
    link(rel="stylesheet", href="/css/shop.css")

block content
    main
        if products.length > 0
            .grid
                each product in products
                    article.card.product-item
                        header.card__header
                            h1.product__title #{product.title}
                        div.card__image
                            img(src="https://dummyimage.com/600x400/000/fff", alt="No image", width="320px")
                        div.card__content
                            h2.product__price $19.90
                            p.product__description A very book.
                        .card__actions
                        button.btn Add to Cart            
        else 
            h1 No Products